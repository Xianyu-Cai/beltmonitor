{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "*.ts",
    "backend/src/**/*",
    "frontend/**/*.ts",
    "frontend/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "ai-end",
    "past"
  ]
}
    